
if [ "${BASH_SOURCE-}" = "$0" ]; then
    echo "You must source this script: \$ source $0" >&2
    exit 33
fi

# Use script directory, not pwd (pwd depends on where you run from)
script_dir="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" && pwd)"

# Save old PATH so we can restore it (unique var name)
export _OLD_BLADERF_WORKSPACE_PATH="$PATH"

# Activate venv (this will touch PATH)
source "$script_dir/python3.14/bin/activate"

# Now prepend your binaries so they win
export PATH="$script_dir/output/bin:$PATH"

# The hash command must be called to get it to forget past
# commands. Without forgetting past commands the $PATH changes
# we made may not be respected
hash -r 2>/dev/null || true